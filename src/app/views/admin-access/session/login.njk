{% extends "layouts/session.njk" %}

{% block content %}
    <form class="login-form" action="/admin/users/login" method="POST">
    
        <h2> Iniciar sess√£o </h2>

        <section class="details">

            {% include "./fields.njk" %}

        </section>




        <div class="footer-session">
            {% if session.userId %}

                <form action="/admin/users/logout" method="POST">
                    <button class="button">Sair</button>
                </form>

            {% else %}
                
                <form action="/admin/users/login" method="post">
                    <a href="/admin/users/forgot-password">Perdeu a senha?</a>

                    <button class="button" type="submit">Acessar</button>
                </form>

            {% endif %}
        </div>

    </form>
    
    <script src="/javascript/script.js"></script>
{% endblock %}